# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/sismakel?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# CORS Configuration
# Multiple origins separated by commas
# For development, include your frontend URLs
CORS_ORIGIN=http://localhost:5173,http://localhost:3001,http://127.0.0.1:5173

# Optional: Database Configuration (if using different database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=postgres
# DB_PASSWORD=password
# DB_DATABASE=sismakel

# Optional: Redis Configuration (if using Redis for sessions)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: Email Configuration (if using email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: File Upload Configuration
# UPLOAD_PATH=./uploads
# MAX_FILE_SIZE=5242880

# Optional: Rate Limiting
# RATE_LIMIT_TTL=60
# RATE_LIMIT_LIMIT=100 